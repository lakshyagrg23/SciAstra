<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Our Blog</title>
  
  <!-- Bootstrap and Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/styles.css">
</head>
<body class="bg-gray-100">

  <!-- Header Section -->
  <header class="bg-gradient-to-r from-purple-500 to-indigo-600 text-white py-5 mb-4 shadow-md">
    <div class="container text-center">
      <h1 class="text-4xl font-bold">Our Blog</h1>
      <p class="text-lg mt-2">Latest insights, stories, and updates</p>
    </div>
  </header>

  <!-- Main Blog Content -->
  <main class="container">
    <% if (blogPosts.length > 0) { %>
      <div class="row gy-4">
        <% blogPosts.forEach(post => { %>
          <!-- Blog Post Card -->
          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm hover:shadow-md h-full">
              <div class="card-body">
                <h5 class="card-title text-indigo-700 font-bold text-xl">
                  <a href="/blog/<%= post.id %>" class="hover:text-purple-500"><%= post.title %></a>
                </h5>
                <p class="card-text text-gray-500 text-sm mb-2">
                  By <%= post.author %> | <%= new Date(post.scheduled_at).toLocaleDateString() %>
                </p>
                <p class="card-text text-gray-700 mb-3">
                  <%= post.content.slice(0, 150) %>...
                </p>
                <a href="/blog/<%= post.id %>" class="text-indigo-600 font-bold hover:underline">Read More</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center py-5">
        <p class="text-gray-500 text-lg">No blog posts are available at the moment. Please check back later!</p>
      </div>
    <% } %>
  </main>

  <!-- Footer Section -->
  <footer class="bg-gray-800 text-white py-4 mt-5">
    <div class="container text-center">
      <p class="mb-0">&copy; 2023 SciAstra. All rights reserved.</p>
    </div>
  </footer>

  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
