<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Post</title>

  <!-- Bootstrap, Tailwind CSS, and Quill CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

  <!-- Header Section -->
  <header class="bg-gradient-to-r from-red-600 to-red-400 text-white py-5 shadow-md">
    <div class="container text-center">
      <h1 class="text-3xl font-bold">Create New Blog Post</h1>
    </div>
  </header>

  <!-- Main Form Container -->
  <main class="container my-5">
    <div class="bg-white p-6 rounded-lg shadow-lg max-w-2xl mx-auto">
      <h2 class="text-2xl font-semibold text-indigo-700 mb-4">New Post Details</h2>

      <!-- Create Post Form -->
      <form id="postForm" action="/admin/create" method="POST" class="space-y-4">
        
        <!-- Title Field -->
        <div>
          <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
          <input type="text" name="title" id="title" class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" required>
        </div>

        <!-- Author Field -->
        <div>
          <label for="author" class="block text-sm font-medium text-gray-700">Author</label>
          <input type="text" name="author" id="author" class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" required>
        </div>

        <!-- Image URL Field -->
        <div>
          <label for="image_url" class="block text-sm font-medium text-gray-700">Image URL</label>
          <input type="text" name="image_url" id="image_url" class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
        </div>

        <!-- Content Field -->
        <div>
            <label for="content" class="block text-sm font-medium text-gray-700">Content</label>
            <textarea name="content" id="content" rows="6" class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" required></textarea>
          </div>

        <!-- Scheduled At Field (Pre-filled with Current Date and Time) -->
        <div>
          <label for="scheduled_at" class="block text-sm font-medium text-gray-700">Scheduled At</label>
          <input type="datetime-local" name="scheduled_at" id="scheduled_at" class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" required>
        </div>

        <!-- Form Action Buttons -->
        <div class="flex space-x-3">
          <!-- Save as Draft Button -->
          <button type="button" onclick="submitForm('draft')" class="w-full bg-gray-500 text-white py-2 rounded-md hover:bg-gray-600">Save as Draft</button>

          <!-- Create Post Button (Default immediate publishing) -->
          <button type="button" onclick="submitForm('published')" class="w-full bg-indigo-600 text-white py-2 rounded-md hover:bg-indigo-700">Create Post</button>
        </div>
      </form>
    </div>
  </main>

  <!-- Footer Section -->
  <footer class="bg-gray-800 text-white py-4 mt-5">
    <div class="container text-center">
      <p class="mb-0">&copy; 2023 SciAstra. All rights reserved.</p>
    </div>
  </footer>

  <!-- JavaScript Libraries: Quill, Bootstrap, and Custom Script -->
  <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Initialize Quill Editor and Sync Content to Hidden Input -->
  <script>
    // Initialize Quill editor
    const quill = new Quill('#editor', {
      theme: 'snow',
      modules: {
        toolbar: [
          [{ 'header': [1, 2, false] }],
          ['bold', 'italic', 'underline'],
          ['link', 'blockquote', 'code-block', 'image'],
          [{ 'list': 'ordered' }, { 'list': 'bullet' }],
          [{ 'align': [] }]
        ]
      }
    });

    // Sync Quill content to hidden input before form submission
    const form = document.getElementById('postForm');
    form.onsubmit = function() {
      // Populate hidden input with Quill HTML content
      const quillContent = quill.root.innerHTML;
      document.getElementById('content').value = quillContent;

      // Debugging step: Log the content to check if it is being set
      console.log("Quill content:", quillContent);
      console.log("Hidden input value:", document.getElementById('content').value);
      
      return true;  // Proceed with form submission
    };

    // Set default scheduled time to current date and time
    function setDefaultDateTime() {
      const dateField = document.getElementById('scheduled_at');
      const now = new Date();
      const year = now.getFullYear();
      const month = String(now.getMonth() + 1).padStart(2, '0');
      const day = String(now.getDate()).padStart(2, '0');
      const hours = String(now.getHours()).padStart(2, '0');
      const minutes = String(now.getMinutes()).padStart(2, '0');
      dateField.value = `${year}-${month}-${day}T${hours}:${minutes}`;
    }

    window.onload = setDefaultDateTime;

    // Custom function to submit the form with a status
    function submitForm(status) {
      const statusInput = document.createElement('input');
      statusInput.type = 'hidden';
      statusInput.name = 'status';
      statusInput.value = status;
      form.appendChild(statusInput);
      form.submit();
    }
  </script>

</body>
</html>
